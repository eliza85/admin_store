<h1><span><%= @product.name %></span></h1>
<h3><span><%= @product.cost %></span></h3>
<h3><span><%= @product.country_of_origin %></span></h3>

<% if @product.reviews.any? %>
  <h4><span>Here are the reviews for this product:</span></h4>

  <% @product.reviews.each do |review| %>
    <ul>
      <li><span>
        <%= link_to review.author, product_review_path(@product, review) %>
      </span></li>
    </ul>
  <% end %>
<% else %>
  <p><span>No reviews are listed for this product.</span></p>
<% end %>

<p><span><%= link_to "Add a review", new_product_review_path(@product) %></span></p>

<p><span><%= link_to "Edit", edit_product_path(@product) %><span></p>
<p><span><%= link_to "Delete product", product_path(@product),
                        :data => {:confirm => "Are you sure?",
                                       :method => "delete"} %></span></p>

  <p><span><%= link_to "Return to products", products_path %></span></p>
