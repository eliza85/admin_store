<h1><span>Add a new review:</span></h1>

<%= form_for [@product, @review] do |f| %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :content_body %>
  <%= f.text_area :content_body %>
  <%= f.label :rating %>
  <%= f.text_area :rating %>
  <p><span><%= f.submit %></span></p>
<% end %>
